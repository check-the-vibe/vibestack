{
  "name": "Vibestack DevContainer",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--init"
  ],
  "forwardPorts": [80],
  "portsAttributes": {
    "80": {
      "label": "Web Server",
      "onAutoForward": "openPreview",
      "requireLocalPort": false,
      "protocol": "http",
      "visibility": "public"
    }
  },
  "postStartCommand": "sudo /bin/bash -c '/entrypoint.sh'",
  "remoteUser": "vibe",
  "workspaceFolder": "/workspaces/vibestack"
}
